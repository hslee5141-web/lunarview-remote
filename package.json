{
  "name": "remote-desktop",
  "version": "1.0.0",
  "description": "TeamViewer-like remote desktop application",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/desktop",
    "build": "npm run build --workspace=apps/desktop",
    "server": "npm run dev --workspace=apps/server",
    "test": "jest --config jest.config.json",
    "test:watch": "jest --config jest.config.json --watch",
    "test:coverage": "jest --config jest.config.json --coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "admin": "npm run admin --workspace=apps/server"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "@types/jest": "^29.5.0",
    "@peculiar/webcrypto": "^1.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}