{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@remote-desktop/core": [
                "packages/core/src"
            ],
            "@remote-desktop/protocol": [
                "packages/protocol/src"
            ],
            "@remote-desktop/crypto": [
                "packages/crypto/src"
            ]
        }
    },
    "include": [
        "apps/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}