{
    "name": "lunarview-desktop",
    "version": "1.3.5",
    "description": "LunarView - Remote Desktop Application",
    "author": "LunarView Team <support@lunarview.com>",
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
        "dev:renderer": "vite",
        "dev:electron": "wait-on http://localhost:5173 && tsc -p tsconfig.main.json && electron . --dev",
        "build": "vite build && tsc -p tsconfig.main.json",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux"
    },
    "dependencies": {
        "@jitsi/robotjs": "^0.6.18",
        "electron-log": "^5.1.1",
        "electron-store": "^8.1.0",
        "electron-updater": "^6.1.7",
        "qrcode": "^1.5.4",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@electron/rebuild": "^4.0.2",
        "@types/qrcode": "^1.5.6",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@vitejs/plugin-react": "^4.2.0",
        "concurrently": "^8.2.0",
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1",
        "electron-packager": "^17.1.2",
        "electron-vite": "^5.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.lunarview.desktop",
        "productName": "LunarView",
        "icon": "assets/icon.png",
        "electronVersion": "28.0.0",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist",
            "package.json",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/icon.png"
        },
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.utilities"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Utility"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "shortcutName": "LunarView"
        },
        "protocols": [
            {
                "name": "LunarView Protocol",
                "schemes": [
                    "lunarview"
                ]
            }
        ],
        "publish": [
            {
                "provider": "github",
                "owner": "hslee5141-web",
                "repo": "lunarview-remote",
                "releaseType": "release"
            }
        ]
    }
}
