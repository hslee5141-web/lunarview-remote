{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020"
        ],
        "outDir": "./dist/main",
        "rootDir": "./src/main",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedParameters": false,
        "allowJs": true,
        "composite": true
    },
    "include": [
        "src/main/**/*.ts",
        "src/main/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}